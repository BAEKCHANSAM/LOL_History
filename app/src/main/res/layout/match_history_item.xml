        android:src="@color/colorGray"
        android:layout_marginStart="2dp"/>

    <ImageView
        android:id="@+id/tv_item_3"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_2"
        app:layout_constraintRight_toLeftOf="@id/tv_item_4"
        app:layout_constraintTop_toBottomOf="@id/tv_kda"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@color/colorGray"
        android:layout_marginStart="2dp"/>

    <ImageView
        android:id="@+id/tv_item_4"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_3"
        app:layout_constraintRight_toRightOf="@id/tv_item_5"
        app:layout_constraintTop_toBottomOf="@id/tv_kda"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@color/colorGray"
        android:layout_marginStart="2dp"/>

    <ImageView
        android:id="@+id/tv_item_5"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_4"
        app:layout_constraintRight_toLeftOf="@id/tv_item_6"
        app:layout_constraintTop_toBottomOf="@id/tv_kda"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@color/colorGray"
        android:layout_marginStart="2dp"/>

    <ImageView
        android:id="@+id/tv_item_6"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:layout_constraintLeft_toRightOf="@id/tv_item_5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_kda"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@color/colorGray"
        android:layout_marginStart="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
